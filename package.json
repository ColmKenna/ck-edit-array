{
  "name": "@ck-templates/edit-array",
  "version": "1.0.0",
  "description": "A web component for editing arrays of structured data with inline editing, validation, and accessibility features.",
  "type": "module",
  "source": "src/ck-edit-array.ts",
  "main": "dist/ck-edit-array.cjs",
  "module": "dist/ck-edit-array.js",
  "types": "dist/ck-edit-array.d.ts",
  "exports": {
    ".": {
      "import": "./dist/ck-edit-array.js",
      "require": "./dist/ck-edit-array.cjs",
      "types": "./dist/ck-edit-array.d.ts"
    }
  },
  "unpkg": "dist/ck-edit-array.js",
  "jsdelivr": "dist/ck-edit-array.js",
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "rollup -c --environment NODE_ENV:production",
    "build:watch": "rollup -c --watch",
    "build:ts": "tsc -p tsconfig.build.json",
    "lint": "eslint src/ tests/ --ext .ts,.js",
    "lint:fix": "eslint src/ tests/ --ext .ts,.js --fix",
    "format": "prettier --write \"src/**/*.{ts,js}\" \"tests/**/*.{ts,js}\" \"docs/**/*.md\"",
    "format:check": "prettier --check \"src/**/*.{ts,js}\" \"tests/**/*.{ts,js}\" \"docs/**/*.md\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "validate": "npm run lint && npm run format:check && npm run test:ci",
    "docs": "typedoc src/ck-edit-array.ts --out docs/api",
    "serve": "npx serve examples -p 3001",
    "demo": "npx serve examples -p 3001",
    "prepare": "npm run build:types",
    "prepublishOnly": "npm run build && npm run build:types"
  },
  "keywords": [
    "web-components",
    "custom-elements",
    "array-editing",
    "form-controls",
    "inline-editing",
    "accessibility",
    "validation",
    "shadow-dom",
    "es-modules",
    "typescript"
  ],
  "author": {
    "name": "Colm Kenna",
    "email": "colmkenna@gmail.com",
    "url": "https://github.com/colmkenna"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/colmkenna/edit-array.git"
  },
  "bugs": {
    "url": "https://github.com/colmkenna/edit-array/issues"
  },
  "homepage": "https://github.com/colmkenna/edit-array#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": [
    "last 2 Chrome major versions",
    "last 2 Firefox major versions",
    "last 2 Safari major versions",
    "last 2 Edge major versions"
  ],
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.4",
    "@babel/preset-typescript": "^7.24.7",
    "@rollup/plugin-node-resolve": "^15.2.4",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.9.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.3.3",
    "rimraf": "^5.0.5",
    "rollup": "^4.21.2",
    "typedoc": "^0.28.13",
    "typescript": "^5.6.3"
  },
  "peerDependencies": {},
  "dependencies": {},
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 100,
    "bracketSpacing": true,
    "arrowParens": "avoid"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2022": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "plugins": [
      "jest"
    ],
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "no-console": [
        "warn",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ],
      "prefer-const": "error",
      "no-var": "error"
    },
    "overrides": [
      {
        "files": [
          "tests/**/*.ts",
          "tests/**/*.js"
        ],
        "env": {
          "jest": true
        },
        "rules": {
          "no-console": "off"
        }
      }
    ]
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/yourusername"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}