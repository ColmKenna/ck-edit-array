{
  "name": "@ck-templates/edit-array",
  "version": "1.0.0",
  "description": "A web component for editing arrays of structured data with inline editing, validation, and accessibility features",
  "type": "module",
  "main": "src/ck-edit-array.js",
  "module": "src/ck-edit-array.js",
  "types": "src/ck-edit-array.d.ts",
  "exports": {
    ".": {
      "import": "./src/ck-edit-array.js",
      "types": "./src/ck-edit-array.d.ts"
    }
  },
  "files": [
    "src/",
    "docs/",
    "examples/",
    "tests/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint src/ tests/ --ext .js,.ts",
    "lint:fix": "eslint src/ tests/ --ext .js,.ts --fix",
    "format": "prettier --write \"src/**/*.{js,ts}\" \"tests/**/*.{js,ts}\" \"docs/**/*.md\"",
    "format:check": "prettier --check \"src/**/*.{js,ts}\" \"tests/**/*.{js,ts}\" \"docs/**/*.md\"",
    "build": "rollup -c rollup.config.js",
    "build:watch": "rollup -c rollup.config.js --watch",
    "serve": "npx serve . -p 3000",
    "demo": "npx serve examples -p 3001",
  "docs": "typedoc src/ck-edit-array.js --out docs/api",
    "validate": "npm run lint && npm run format:check && npm run test:ci",
    "release": "npm run validate && npm run build && npm publish",
    "prepublishOnly": "npm run validate && npm run build"
  },
  "keywords": [
    "web-components",
    "custom-elements",
    "array-editing",
    "form-controls",
    "inline-editing",
    "accessibility",
    "validation",
    "shadow-dom",
    "es-modules",
    "typescript"
  ],
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com",
    "url": "https://github.com/yourusername"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/edit-array.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/edit-array/issues"
  },
  "homepage": "https://github.com/yourusername/edit-array#readme",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "browserslist": [
    "last 2 Chrome major versions",
    "last 2 Firefox major versions",
    "last 2 Safari major versions",
    "last 2 Edge major versions"
  ],
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "@rollup/plugin-babel": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-terser": "^0.4.0",
    "@types/jest": "^29.5.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jest": "^27.2.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "prettier": "^2.8.0",
    "rollup": "^3.25.0",
    "typedoc": "^0.24.0"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 100,
    "bracketSpacing": true,
    "arrowParens": "avoid"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2022": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "plugins": ["jest"],
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
      "no-console": ["warn", { "allow": ["warn", "error"] }],
      "prefer-const": "error",
      "no-var": "error"
    },
    "overrides": [
      {
        "files": ["tests/**/*.js"],
        "env": {
          "jest": true
        },
        "rules": {
          "no-console": "off"
        }
      }
    ]
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/yourusername"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}